{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["client/src/**/*", "server/src/**/*"],
  "exclude": ["node_modules"]
}